Options -Indexes +FollowSymlinks
RewriteEngine on
# Article avec numéro de page :
RewriteRule ^connexion$ /RiskAnalysis/connexion.php/* [L]
RewriteRule ^parametres&([0-9]+)$ /RiskAnalysis/parametres.php?id_utilisateur=$1/* [L]
RewriteRule ^aide&([0-9]+)$ /RiskAnalysis/aide.php?id_utilisateur=$1/* [L]
RewriteRule ^atelier-([0-9]+)([a-d]+)&([0-9]+)&([0-9]+)$ /RiskAnalysis/atelier$1$2.php?id_utilisateur=$3&id_projet=$4/* [L]
RewriteRule ^index&([0-9]+)$ /RiskAnalysis/index.php?id_utilisateur=$1/* [L]
RewriteRule ^mode_expert&([0-9]+)&([0-9]+)$ /RiskAnalysis/mode_expert.php?id_utilisateur=$1&id_projet=$2/* [L]
RewriteRule ^planification&([0-9]+)&([0-9]+)$ /RiskAnalysis/pro/gantt/plan.php?id_utilisateur=$1&id_projet=$2/* [L]
# Faire que le code PHP ressemble à du html
AddType application/x-httpd-php .htm .html
# X-XSS-Protection
<IfModule mod_headers.c>
	Header set X-XSS-Protection "1; mode=block"
</IfModule>
# X-Frame-Options
<IfModule mod_headers.c>
	Header always append X-Frame-Options SAMEORIGIN
</IfModule>
# X-Content-Type nosniff
<IfModule mod_headers.c>
	Header set X-Content-Type-Options nosniff
</IfModule>
# Extra Security Headers
Header always set Strict-Transport-Security "max-age=15552001; includeSubDomains;"
#php_flag session.cookie_httponly on
#php_flag session.cookie_secure on
